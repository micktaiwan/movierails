<br/>
<% end %>


<% form_remote_tag(:url=>'/movie/search', :update=>'entry') do %>
<% if session['user'] %>
Recherche:
<%= text_field(:movie, :title) %>
<% end %>
<% end %>

<div id="entry">
<%
if @entry 
    opinions = @entry.opinions
    my = false
    my = session['user'].movies.include?(@entry) if session['user']
%>
<%= render(:partial=>'entry', :locals=>{:opinions=>opinions, :my=>my}) %>
<% end %>
</div>

<br/>

<div id="yield">
<%= yield %>
</div>

